<div class='container'>

	<br>

	<h3>Sell Purchasable Item</h3>

	<br>

	<div class='col-lg-6 col-md-10 win-form'>

		<form action='/makepurchase/<%=event.id%>' method="POST" class='form-style shadow-sm'>
				<div hidden="true">
					<input name='id' value='<%=event.id%>'>
				</div>
					<div class='inpt field col form-group'>
						<label for='bidNumber'>Bid Number</label>
						<input type='text' class="form-control" id='bidNumber' name='bidNumber'>
					</div>
					<h4 class='win-page'>BOUGHT</h4>
					<div class="form-row">
					<div class='inpt field col-md-2 form-group'>
						<label for='number'>Number</label>
						<input type='text' class="form-control" id='number' name='number'>
					</div>
						<div class='inpt field col-md-8 form-group'>
							<label for='purchaseName'>Purchasable Item</label>
							<select name="purchaseId" class="form-control">
							<option value="0"> Select</option>
							<% if (purchases) { %>
							<% purchases.forEach(function(p){ %>
							<option value="<%=p.id%>">
							<%= p.name %>
							</option>
							<%})%>
							<% } %>
							</select>
						</div>
					</div>
				   <button type="submit" class="shadow-sm btn btn-lg btn-warning">Sell</button>
		</form>

	</div>

	<br><br>
	
	<%#footer not in partials b/c I didn't want it on every page%>
	<footer> 
		<a href='/event/<%=event.name%>' class='btn btn-warning'>event page</a>
		<a href='/item/<%=event.id%>' class='btn btn-warning'>items</a>
		<a href='/attendee/<%=event.id%>' class='btn btn-warning'>attendees</a>
		<a href='/sell/receipt/<%=event.id%>' class='btn btn-warning' disabled>checkout</a>
	</footer>

</div>